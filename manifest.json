{
  "name": "Rotten Tomatoes on Cineplex",
  "version": "1.0",
  "description": "Will display the rotten tomatoes score of a movies presented on the Cineplex.com website.",
  "permissions": [
    "activeTab",
    "declarativeContent",
    "storage",
    "webNavigation",
    "tabs",
    "notifications",
    "http://*/",
    "https://*/"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false,
    "matches": [
      "*.cineplex.com/*"
    ]
  },
  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  },
  "manifest_version": 2
}
